{
  "name": "joshuareinier-com",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev -c \"npm run dev:serve\"",
    "dev:serve": "binode --require ./mocks -- @remix-run/serve:remix-serve ./build",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "@react-spring/web": "^9.7.3",
    "@remix-run/node": "latest",
    "@remix-run/react": "latest",
    "@remix-run/serve": "latest",
    "@types/d3": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "d3": "^7.8.5",
    "express": "^4.18.2",
    "framer-motion": "^10.12.20",
    "g": "^2.0.1",
    "isbot": "^3.6.10",
    "latest": "^0.2.0",
    "lodash": "^4.17.21",
    "matter-js": "^0.19.0",
    "morgan": "^1.10.0",
    "n": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.6.0",
    "style-to-object": "^0.4.2",
    "tiny-invariant": "^1.3.1",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@remix-run/dev": "latest",
    "@remix-run/eslint-config": "latest",
    "@remix-run/express": "latest",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.195",
    "@types/matter-js": "^0.18.5",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.17",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.15",
    "binode": "^1.0.5",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.14.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-cypress": "^2.13.3",
    "happy-dom": "^10.9.0",
    "msw": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "prisma": "^4.15.0",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "ts-node --require prisma/seed.ts"
  }
}
